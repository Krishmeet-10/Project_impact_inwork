<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation_Fragments.volunteer_User_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="New Delhi"
        android:layout_marginTop="60dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle = "bold"
        android:text="Center of Education Trust"
        android:layout_marginTop="110dp"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle = "bold"
        android:text="Teaching the Underprivileged"
        android:layout_marginTop="160dp"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/sid"
        android:layout_width="245dp"
        android:layout_height="168dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/support_2355701_1920" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="269dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="400dp"
        android:text="We appreciate you for volunteering for Teaching the Underprivileged, You will be contacted by Center of Education Trust shortly!"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:text="Track Status" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text = "more opportunities"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp" />



</RelativeLayout>