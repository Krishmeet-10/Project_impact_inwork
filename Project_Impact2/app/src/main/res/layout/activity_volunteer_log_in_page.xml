<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".volunteerLogInPage">

        <androidx.cardview.widget.CardView

            android:id="@+id/logInVolunteer"
            android:layout_width="296dp"
            android:layout_height="328dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:layout_marginTop="200dp"
            android:background="?attr/colorControlHighlight"
            app:cardBackgroundColor="#3E6E69"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.714">

            <TextView
                android:id="@+id/option"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="LOG IN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:typeface="serif"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/userOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="73dp"
                android:gravity="center"
                android:text="Volunteer"
                android:textColor="#D3D3D3"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/emailEditText2"
                android:layout_width="190dp"
                android:layout_height="53dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="105dp"
                android:autofillHints="Email"
                android:hint="Email"
                android:importantForAutofill="yes"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/passwordEditText2"
                android:layout_width="190dp"
                android:layout_height="53dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="165dp"
                android:hint="Password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/logInButton"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="225dp"
                android:layout_marginEnd="30dp"
                android:onClick="homepage"
                android:background="?attr/colorControlHighlight"
                android:text="Log In"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/forgotVButton"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="265dp"
                android:background="#00000000"
                android:text=" Forgot Password or ID"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp">

            </Button>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="556dp"
            android:fontFamily="serif"
            android:text="IMPACT"
            android:textAllCaps="false"
            android:textColor="#688DA6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>